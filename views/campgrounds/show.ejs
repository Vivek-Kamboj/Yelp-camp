<%- include('../partials/header') -%>


<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelpcamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info</li>

				<li class="list-group-item">Info</li>

				<li class="list-group-item">Info</li>
			</div>
			
		</div>

		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<h4 class="pull-right">
						$9.00/night
					</h4>
					<h4>
						<a href="#">
							<%= campground.name %>
						</a>
						
					</h4>
					<p>
							<%= campground.description %>
		
					</p>
					<hr>
					<p>
						<em>Submitted by - <%= campground.author.username %></em>	
					</p>
					
					<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>

					<a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">EDIT</a>
					<form class="delete-form" method="POST" action="/campgrounds/<%= campground._id %>?_method=DELETE">
						<input class="btn btn-danger" type="submit" value="Destroy">
					</form>
					<% } %>

				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add NEW Comment</a>
					<hr>

				</div>
				<% campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<%= comment.author.username %>
							<span class="pull-right">10 Days ago</span>
							<p>
								<%= comment.text %>	
							</p>
							
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>

								<a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-warning">EDIT Comment</a>
								<form class="delete-form" method="POST" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE">
									<input class="btn btn-xs btn-danger" type="submit" value="Destroy">
								</form>
							<% } %>

							<hr>
						</div>
					</div>
					

				<% }) %>
			</div>
		</div>

	</div>
</div>



<%- include('../partials/footer') -%>